{
  "Variables": [
    {
      "Id": "locals",
      "Merge": "_Gunter/defaults",
      "Items": {
        "ProductName": "Gunter",
        "Greeting-1": "Hi there!"
      }
    }
  ],
  "DataSources": [
    {
      "$t": "TableOrView",
      "Id": "everything",
      "Merge": "_Gunter/everything"
    }
  ],
  "Tests": [
    {
      "Id": "any",
      "Enabled": true,
      "Level": "Fatal",
      "Message": "There is no test data.",
      "DataSources": [
        "everything"
      ],
      "Assert": "Count([_id]) > 0",
      "OnPassed": "Alert, Halt",
      "OnFailed": "Alert, Halt",
      "Messages": [
        "default-email"
      ],
      "Tags": []
    },
    {
      "Id": "must-not-run",
      "Enabled": false,
      "Level": "Error",
      "Message": "This test must not run.",
      "DataSources": [
        "everything"
      ],
      "Assert": "Count([_id]) = 0",
      "OnPassed": "None",
      "OnFailed": "Alert, Halt",
      "Messages": [
        "default-email"
      ],
      "Tags": []
    },
    {
      "Id": "last-one",
      "Enabled": true,
      "Level": "Debug",
      "Message": "There are less than 100 items.",
      "DataSources": [
        "everything"
      ],
      "Assert": "Count([_id]) < 100",
      "OnPassed": "Alert, Halt",
      "OnFailed": "Alert, Halt",
      "Messages": [
        "default-email"
      ],
      "Tags": []
    },
    {
      "Id": "tst-3",
      "Enabled": true,
      "Level": "Fatal",
      "Message": "Some commands did not complete successfully and this for very long time!",
      "DataSources": [
        "everything"
      ],
      "Filter": "[Level] = 'Fatal'",
      "Assert": "Count([Id]) = 0",
      "OnPassed": "None",
      "OnFailed": "Alert, Halt",
      "Messages": [
        "default-email"
      ],
      "Tags": []
    }
  ],
  "Messages": [
    {
      "$t": "Mailr",
      "Id": "default-email",
      "Merge": "_Gunter/default-email",
      "Reports": [
        "full-report"
      ]
    }
  ],
  "Reports": [
    {
      "Id": "full-report",
      "Merge": "_Gunter/full-report"
    }
