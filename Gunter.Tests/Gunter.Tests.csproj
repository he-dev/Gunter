<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!--<TargetFramework>net47</TargetFramework>-->
    <TargetFramework>netcoreapp2.2</TargetFramework>

    <IsPackable>false</IsPackable>

    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="cfg\Example.json" />
    <None Remove="cfg\Example.sql" />
    <None Remove="cfg\_Gunter.json" />
    <None Include="..\Gunter\cfg\tests\Example.json">
      <Link>cfg\tests\Example.json</Link>
    </None>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.9.4" />
    <PackageReference Include="Dapper" Version="1.50.7" />
    <PackageReference Include="JustMock" Version="2019.2.620.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1" />
    <PackageReference Include="xunit" Version="2.4.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Reusable\Reusable.Teapot\Reusable.Teapot.csproj" />
    <ProjectReference Include="..\..\Reusable\Reusable.Utilities.XUnit\Reusable.Utilities.XUnit.csproj" />
    <ProjectReference Include="..\Gunter\Gunter.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="cfg\tests\Example.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Remove="sql\seed-test-data.sql" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="res\sql\seed-test-data.sql" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="res" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\Gunter\cfg\tests\Example.empty.sql">
      <Link>cfg\tests\Example.empty.sql</Link>
    </Content>
    <Content Include="..\Gunter\cfg\tests\Example.everything.sql">
      <Link>cfg\tests\Example.everything.sql</Link>
    </Content>
    <Content Include="..\Gunter\cfg\tests\_Gunter.json">
      <Link>cfg\tests\_Gunter.json</Link>
    </Content>
  </ItemGroup>

</Project>
