{
  "Variables": [
    {
      "Id": "defaults",
      "Items": {
        "TestDb": "Data Source=(local);Initial Catalog=TestDb;Integrated Security=SSPI;",
        "Greeting": "Hi there!"
      }
    }
  ],
  "Logs": [
    {
      "$g": "TableOrView",
      "Id": "everything",
      "ConnectionString": "{TestDb}",
      "Query": "file:///{TestBundle.FileName}.everything.sql",
      "Filters": [
        {
          "$g": "GetJsonValue",
          "Columns": [
            {
              "From": "_json",
              "Select": "$.Name",
              "Attach": "_name",
              "Default": "Unknown"
            }
          ]
        },
        {
          "$g": "GetFirstLine",
          "Columns": [
            {
              "From": "_text",
              "Attach": "_text-first-line"
            }
          ]
        }
      ]
    },
    {
      "$g": "TableOrView",
      "Id": "empty",
      "ConnectionString": "{TestDb}",
      "Query": "file:///{TestBundle.FileName}.empty.sql"
    }
  ],
  "Tests": [],
  "Messengers": [
    {
      "$g": "Mailr",
      "Id": "default-email",
      "Theme": "default"
    }
  ],
  "Reports": [
    {
      "Id": "full",
      "Title": "Glitch alert [{TestCase.Level}]",
      "Modules": [
        {
          "$g": "Level"
        },
        {
          "$g": "Greeting",
          "Heading": "Hi, everyone.",
          "Text": "{TestCase.Message}"
        },
        {
          "$g": "TestCase",
          "Heading": "Test case"
        },
        {
          "$g": "DataSource",
          "Heading": "Data-source"
        },
        {
          "$g": "DataSummary",
          "Heading": "Default data summary",
          "Columns": [
            {
              "Select": "_text"
            },
            {
              "Select": "_json"
            },
            {
              "Select": "_misc"
            },
            {
              "Select": "_flag"
            },
            {
              "Select": "_count"
            },
            {
              "Select": "_elapsed"
            },
            {
              "Select": "_price"
            },
            {
              "Select": "_timestamp"
            }
          ]
        },
        {
          "$g": "DataSummary",
          "Heading": "Custom data summary",
          "Columns": [
            {
              "Select": "_text",
              "Display": "_text-renamed"
            },
            {
              "Select": "_text-first-line",
              "IsKey": true
            },
            {
              "Select": "_count",
              "Aggregate": "Sum"
            },
            {
              "Select": "_elapsed",
              "Aggregate": "Average"
            },
            {
              "Select": "_price",
              "Aggregate": "Max"
            }
          ]
        }
      ]
    }
  ]
}