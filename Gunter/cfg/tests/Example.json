{
  "Properties": [
    {
      "Name": "locals",
      "Merge": "_Gunter#defaults",
      "Items": {
        "ProductName": "Gunter",
        "Greeting-1": "Hi there!"
      }
    }
  ],
  "Queries": [
    {
      "$g": "TableOrView",
      "Name": "mssql-everything",
      "Merge": "_Gunter#mssql-everything"
    },
    {
      "$g": "TableOrView",
      "Name": "mssql-empty",
      "Merge": "_Gunter#mssql-empty"
    }
  ],
  "Tests": [
    {
      "Name": "fails",
      "Enabled": true,
      "Level": "Fatal",
      "Message": "There is no data.",
      "Check": [
        "mssql-empty"
      ],
      "Assert": "Count([_id]) > 0",
      "When": {
        "Failed": [
          {
            "$g": "Email",
            "Merge": "_Gunter#email",
            "To": [
              "gunter@test.com"
            ],
            "Report": "full"
          },
          {
            "$g": "Halt"
          }
        ]
      },
      "Tags": [
        "error"
      ]
    },
    {
      "Name": "passes",
      "Enabled": true,
      "Level": "Information",
      "Message": "There is some data.",
      "Check": [
        "mssql-everything"
      ],
      "Assert": "Count([_id]) = 5",
      "When": {
        "Passed": [
          {
            "$g": "Email",
            "Merge": "_Gunter#email",
            "To": [
              "gunter@test.com"
            ],
            "Report": "full"
          },
          {
            "$g": "Halt"
          }
        ]
      },
      "Tags": [
        "status"
      ]
    },
    {
      "Name": "does-not-run",
      "Enabled": false,
      "Level": "Error",
      "Message": "This test must not run.",
      "Check": [
        "mssql-everything"
      ],
      "Assert": "Count([_id]) = 0",
      "When": {
        "Failed": [
          "send -report full -channel email",
          "halt"
        ]
      },
      "Tags": []
    }
  ],
  "Reports": [
    {
      "Name": "full",
      "Merge": "_Gunter#mssql"
    }
  ]
}