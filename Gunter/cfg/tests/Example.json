{
  "Variables": [
    {
      "Id": "var-1",
      "Merge": "_Gunter/var-1",
      "Items": {
        "ProductName": "Gunter"
      }
    }
  ],
  "DataSources": [
    {
      "$t": "TableOrView",
      "Id": "src-1",
      "Merge": "_Gunter/src-1"
    }
  ],
  "Tests": [
    {
      "Id": "tst-1",
      "Enabled": true,
      "Level": "Warning",
      "Message": "Some commands did not complete successfully.",
      "DataSources": [
        "src-1"
      ],
      "Filter": "[Level] = 'Warning'",
      "Expression": "Count([Id]) = 0",
      "Assert": true,
      "OnPassed": "None",
      "OnFailed": "Alert, Halt",
      "Messages": [
        "msg-1"
      ],
      "Profiles": [
        "every-15min"
      ]
    },
    {
      "Id": "tst-2",
      "Enabled": true,
      "Level": "Error",
      "Message": "Some commands did not complete successfully for a longer period of time.",
      "DataSources": [
        "src-1"
      ],
      "Filter": "[Level] = 'Error'",
      "Expression": "Count([Id]) = 0",
      "Assert": true,
      "OnPassed": "None",
      "OnFailed": "Alert, Halt",
      "Messages": [
        "msg-1"
      ],
      "Profiles": [
        "every-15min"
      ]
    },
    {
      "Id": "tst-3",
      "Enabled": true,
      "Level": "Fatal",
      "Message": "Some commands did not complete successfully and this for very long time!",
      "DataSources": [
        "src-1"
      ],
      "Filter": "[Level] = 'Fatal'",
      "Expression": "Count([Id]) = 0",
      "Assert": true,
      "OnPassed": "None",
      "OnFailed": "Alert, Halt",
      "Messages": [
        "msg-1"
      ],
      "Profiles": [
        "every-15min"
      ]
    }
  ],
  "Messages": [
    {
      "$t": "Mailr",
      "Id": "msg-1",
      "Merge": "_Gunter/msg-1",
      "Reports": [
        "rpt-1"
      ]
    }
  ],
  "Reports": [
    {
      "Id": "rpt-1",
      "Title": "Glitch alert | {ProductName} | {TestCase.Level}",
      "Modules": [
        {
          "$t": "Level"
        },
        {
          "$t": "Greeting",
          "Heading": "{Greeting1}",
          "Text": "{TestCase.Message}"
        },
        {
          "$t": "TestCase",
          "Heading": "Test case"
        },
        {
          "$t": "DataSource",
          "Heading": "Data-source"
        },
        {
          "$t": "DataSummary",
          "Heading": "Data summary",
          "Columns": [
            {
              "Name": "Timestamp"
            },
            {
              "Name": "Product",
              "IsKey": true
            },
            {
              "Name": "Logger"
            },
            {
              "Name": "Scope"
              //"Name": "Command"
            },
            {
              "Name": "Layer"
            },
            {
              "Name": "Level"
            },
            {
              "Name": "Category"
            },
            {
              "Name": "Identifier"
            },
            {
              "Name": "Snapshot"
            },
            {
              "Name": "RequestPath"
            },
            {
              "Name": "Elapsed",
              "Total": "Average",
              "Formatter": {
                "$t": "Elapsed"
              }
            },
            {
              "Name": "Message"
            },
            {
              "Name": "Exception",
              "IsKey": true,
              "Filter": {
                "$t": "FirstLine"
              }
            }
          ]
        }
      ]
    }
  ]
}