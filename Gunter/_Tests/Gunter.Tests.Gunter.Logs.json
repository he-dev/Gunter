{
  "Locals": {
    "MainLog": "[robots].[Gunter_MainLog]",
    "Top1k": "1000",
    "To": "test@email.com"
  },
  "DataSources": [
    {
      "$type": "Gunter.Data.SqlClient.TableOrViewDataSource, Gunter",
      "Id": 1,
      "Name": "{MainLog}",
      "ConnectionString": "{TEST_LOG}",
      "Commands": {
        "Main": {
          //"Text": "SELECT TOP({Top1k}) * FROM (SELECT * FROM {MainLog} WHERE [Environment] = @Environment AND [Timestamp] > DATEADD(HOUR, -1, GETUTCDATE())) AS t",
          "Text": "SELECT * FROM {MainLog}",
          "Parameters": { "@Environment": "{Environment}" }
        },
        "Debug": { "Text": "{DebugCommand}" }
      }
    }
  ],
  "Tests": [
    {
      "Enabled": true,
      "Severity": "Warning",
      "Message": "Trace logging is on.",
      "DataSources": [ 1 ],
      "Filter": "[LogLevel] IN ('error', 'fatal')",
      "Expression": "Count([LogLevel]) = 0",
      "Assert": true,
      "CanContinue": true,
      "Alerts": [ 1 ]
    }
  ],
  "Alerts": [
    {
      "$type": "Gunter.Alerting.Email.EmailAlert, Gunter",
      "Id": 1,
      "Title": "{DataSourceName} - {Severity}",
      "To": "{To}",
      "Sections": [
        { "$type": "Gunter.Data.Sections.DataSourceSummary, Gunter" },
        {
          "$type": "Gunter.Data.Sections.Aggregation, Gunter",
          "Columns": [ "Timestamp", "LogLevel | key", "Logger | key", "ElapsedSeconds | sum", "Message", "Exception | key firstline" ]
        }
      ]
    }
  ],
  "Profiles": {
    "normal": [],
    "debug": [ "CheckDebugLevelEnabled" ]
  }
}