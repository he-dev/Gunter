<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net47</TargetFramework>
    <AssemblyName>Gunter</AssemblyName>
    <RootNamespace>Gunter</RootNamespace>
    <Configurations>Debug;Release</Configurations>    
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="src\Reporting\Filters\Elapsed.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.6.2" />
    <PackageReference Include="JetBrains.Annotations" Version="11.1.0" />
    <PackageReference Include="MailrNET" Version="1.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="NLog" Version="4.5.3" />
    <PackageReference Include="Reusable.Converters" Version="5.2.1" />
    <PackageReference Include="Reusable.Core" Version="5.2.1" />
    <PackageReference Include="Reusable.Flawless" Version="5.2.1" />
    <PackageReference Include="Reusable.OmniLog" Version="5.2.1" />
    <PackageReference Include="Reusable.OmniLog.NLogRx" Version="5.2.1" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions" Version="5.2.1" />
    <PackageReference Include="Reusable.SemanticVersion" Version="5.2.1" />
    <PackageReference Include="Reusable.SmartConfig" Version="5.2.1" />
    <PackageReference Include="Reusable.SmartConfig.Utilities" Version="5.2.1" />
    <PackageReference Include="Reusable.SmartConfig.AppConfig" Version="5.2.1" />
    <PackageReference Include="Reusable.SmartConfig.InMemory" Version="5.2.1" />
    <PackageReference Include="Reusable.SmartConfig.JsonConverter" Version="5.2.1" />
    <PackageReference Include="Reusable.Utilities.SqlClient" Version="5.2.1" />
    <PackageReference Include="Reusable.Utilities.NLog" Version="5.2.1" />
    <PackageReference Include="MailrNet" Version="2.1.0" />
    <PackageReference Include="System.Reactive" Version="3.1.1" />
    <PackageReference Include="System.ValueTuple" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System.Data.DataSetExtensions" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NLog.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>NLog.config</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy &quot;$(ProjectDir)cfg\app\$(ConfigurationName).App.config&quot; &quot;$(TargetDir)$(TargetFileName).config&quot; /Y" />
  </Target>

</Project>
