<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net47</TargetFramework>
    <AssemblyName>Gunter</AssemblyName>
    <RootNamespace>Gunter</RootNamespace>
    <Configurations>Debug;Release</Configurations>
    <Optimize>false</Optimize>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="src\Expanders\**" />
    <EmbeddedResource Remove="src\Expanders\**" />
    <None Remove="src\Expanders\**" />
    <Compile Remove="src\Messaging\Emails\Internal\Factories\**" />
    <EmbeddedResource Remove="src\Messaging\Emails\Internal\Factories\**" />
    <None Remove="src\Messaging\Emails\Internal\Factories\**" />
    <Compile Remove="src\Messaging\Emails\Internal\**" />
    <EmbeddedResource Remove="src\Messaging\Emails\Internal\**" />
    <None Remove="src\Messaging\Emails\Internal\**" />
    <None Update="cfg\tests\_Gunter.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="cfg\tests\Example.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="cfg\tests\Example.sql">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="src\Json\Converters\SoftStringConverter.cs" />
    <Compile Remove="src\Reporting\Filters\Elapsed.cs" />
    <Compile Remove="src\Services\TestFileProvider.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.8.1" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Reusable.Core" Version="7.8.0" />
    <PackageReference Include="Reusable.sdk.Mailr" Version="7.8.0" />
    <PackageReference Include="Reusable.OmniLog" Version="7.8.0" />
    <PackageReference Include="Reusable.OmniLog.NLogRx" Version="7.8.0" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions" Version="7.8.0" />
    <PackageReference Include="Reusable.SemanticVersion" Version="7.8.0" />
    <PackageReference Include="Reusable.SmartConfig" Version="7.8.0" />
    <PackageReference Include="Reusable.SmartConfig.AppConfig" Version="7.8.0" />
    <PackageReference Include="Reusable.SmartConfig.InMemory" Version="7.8.0" />
    <PackageReference Include="Reusable.SmartConfig.JsonConverter" Version="7.8.0" />
    <PackageReference Include="Reusable.Utilities.SqlClient" Version="7.8.0" />
    <PackageReference Include="Reusable.Utilities.NLog" Version="7.8.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System.Data.DataSetExtensions" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NLog.config">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>NLog.tt</DependentUpon>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="NLog.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>NLog.config</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy &quot;$(ProjectDir)cfg\app\$(ConfigurationName).App.config&quot; &quot;$(TargetDir)$(TargetFileName).config&quot; /Y" />
  </Target>

</Project>
