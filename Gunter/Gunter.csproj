<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net47</TargetFramework>
    <AssemblyName>Gunter</AssemblyName>
    <RootNamespace>Gunter</RootNamespace>
    <Configurations>Debug;Release</Configurations>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="src\Expanders\**" />
    <EmbeddedResource Remove="src\Expanders\**" />
    <None Remove="src\Expanders\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="src\Json\Converters\SoftStringConverter.cs" />
    <Compile Remove="src\Reporting\Filters\Elapsed.cs" />
    <Compile Remove="src\Services\FileSystem.cs" />
    <Compile Remove="src\Services\PathResolver.cs" />
    <Compile Remove="src\Services\RuntimeFormatterFactory.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\Classified\Gunter\cfg\tests\clasifid.json" Link="cfg\tests\clasifid.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Include="..\..\Classified\Gunter\cfg\tests\_Global.json" Link="cfg\tests\_Global.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.6.2" />
    <PackageReference Include="MailrNET" Version="1.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Reusable.Converters" Version="7.0.22" />
    <PackageReference Include="Reusable.Core" Version="7.0.22" />
    <PackageReference Include="Reusable.Flawless" Version="5.2.1" />
    <PackageReference Include="Reusable.OmniLog" Version="7.0.22" />
    <PackageReference Include="Reusable.OmniLog.NLogRx" Version="7.0.22" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions" Version="7.0.22" />
    <PackageReference Include="Reusable.SemanticVersion" Version="7.0.22" />
    <PackageReference Include="Reusable.SmartConfig" Version="7.0.22" />
    <PackageReference Include="Reusable.SmartConfig.Utilities" Version="7.0.20" />
    <PackageReference Include="Reusable.SmartConfig.AppConfig" Version="7.0.22" />
    <PackageReference Include="Reusable.SmartConfig.InMemory" Version="7.0.22" />
    <PackageReference Include="Reusable.SmartConfig.JsonConverter" Version="7.0.22" />
    <PackageReference Include="Reusable.Utilities.SqlClient" Version="7.0.22" />
    <PackageReference Include="Reusable.Utilities.NLog" Version="7.0.22" />
    <PackageReference Include="MailrNet" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System.Data.DataSetExtensions" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NLog.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>NLog.config</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy &quot;$(ProjectDir)cfg\app\$(ConfigurationName).App.config&quot; &quot;$(TargetDir)$(TargetFileName).config&quot; /Y" />
  </Target>

</Project>
