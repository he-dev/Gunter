<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net47</TargetFramework>
    <AssemblyName>Gunter</AssemblyName>
    <RootNamespace>Gunter</RootNamespace>
    <Configurations>Debug;Release;Debug.clasifid</Configurations>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug.clasifid|AnyCPU'">
    <LangVersion>latest</LangVersion>
    <DefineConstants>DEBUG;TRACE;DEBUG_HE_DEV;NET47</DefineConstants>
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="src\Json\Converters\SoftStringConverter.cs" />
    <Compile Remove="src\Reporting\Filters\Elapsed.cs" />
    <Compile Remove="src\Services\FileSystem.cs" />
    <Compile Remove="src\Services\PathResolver.cs" />
    <Compile Remove="src\Services\RuntimeFormatterFactory.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\Classified\Gunter\cfg\tests\clasifid.json" Link="cfg\tests\clasifid.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="..\..\Classified\Gunter\cfg\tests\_Global.json" Link="cfg\tests\_Global.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.6.2" />
    <PackageReference Include="JetBrains.Annotations" Version="11.1.0" />
    <PackageReference Include="MailrNET" Version="1.2.1" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="NLog" Version="4.4.12" />
    <PackageReference Include="Reusable.Converters" Version="4.10.0" />
    <PackageReference Include="Reusable.Core" Version="4.10.0" />
    <PackageReference Include="Reusable.Flawless" Version="4.10.0" />
    <PackageReference Include="Reusable.OmniLog" Version="4.10.0" />
    <PackageReference Include="Reusable.OmniLog.NLogRx" Version="4.10.0" />
    <PackageReference Include="Reusable.OmniLog.SemanticExtensions" Version="4.10.0" />
    <PackageReference Include="Reusable.SemanticVersion" Version="4.10.0" />
    <PackageReference Include="Reusable.SmartConfig.Core" Version="4.10.0" />
    <PackageReference Include="Reusable.SmartConfig.Core.Utilities" Version="4.10.0" />
    <PackageReference Include="Reusable.SmartConfig.DataStores.AppConfig" Version="4.10.0" />
    <PackageReference Include="Reusable.SmartConfig.DataStores.InMemory" Version="4.10.0" />
    <PackageReference Include="Reusable.SmartConfig.SettingConverters.Json" Version="4.10.0" />
    <PackageReference Include="Reusable.Utilities.SqlClient" Version="4.10.0" />
    <PackageReference Include="Reusable.Utilities.ThirdParty.NLog" Version="4.10.0" />
    <PackageReference Include="System.Reactive" Version="3.1.1" />
    <PackageReference Include="System.ValueTuple" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System.Data.DataSetExtensions" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NLog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>NLog.tt</DependentUpon>
    </None>
    <None Update="NLog.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>NLog.config</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Condition="'$(Configuration)|$(Platform)'=='Debug.clasifid|AnyCPU'" Command="xcopy &quot;$(ProjectDir)cfg\$(ConfigurationName).App.config&quot; &quot;$(TargetDir)$(TargetFileName).config&quot; /Y" />
    <Exec Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'" Command="xcopy &quot;$(ProjectDir)cfg\$(ConfigurationName).App.config&quot; &quot;$(TargetDir)$(TargetFileName).config&quot; /Y" />
    <Exec Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'" Command="xcopy &quot;$(ProjectDir)cfg\$(ConfigurationName).App.config&quot; &quot;$(TargetDir)$(TargetFileName).config&quot; /Y" />
  </Target>

</Project>
